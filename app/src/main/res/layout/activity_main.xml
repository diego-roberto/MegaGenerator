<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_title"
        android:text="@string/text_title"
        android:textColor="@color/black"
        android:layout_above="@+id/spinner_number_select"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinner_number_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="250dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_sortear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/button_sortear"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinner_number_select"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_result"
        android:text="@string/text_resultado"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button_sortear"/>

</RelativeLayout>